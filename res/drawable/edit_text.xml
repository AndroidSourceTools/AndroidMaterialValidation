<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/edit_text_inset_bottom"
    android:insetLeft="@dimen/edit_text_inset_left"
    android:insetRight="@dimen/edit_text_inset_right"
    android:insetTop="@dimen/edit_text_inset_top" >

    <selector>
        <item android:state_enabled="false">
            <nine-patch
                android:alpha="?android:attr/disabledAlpha"
                android:src="@drawable/edit_text_default" />
        </item>
        <item
            android:state_focused="false"
            android:state_pressed="false">
            <nine-patch android:src="@drawable/edit_text_default" />
        </item>
        <item>
            <nine-patch android:src="@drawable/edit_text_activated" />
        </item>
    </selector>

</inset>